from jogo_dos_8 import cria_jogo_dos_8, print_board
from ia_backtracking import resolver_jogo_dos_8

#Inicializando a dimensao da matriz do board
tamanho = int(input("Informe o tamanho do jogo que quer montar: "))

# Criar um jogo dos 8 embaralhado
board = cria_jogo_dos_8(tamanho)

# Imprimir o jogo inicial
print("Jogo inicial:")
print_board(board,tamanho)

# Resolver o jogo utilizando IA e backtracking
print("Resolvendo o jogo...")
resolver_jogo_dos_8(board,tamanho)
